{
	"compilerOptions": {
		"target": "es2019",
		"module": "CommonJS",
		"declaration": true,
		"sourceMap": true,
		"sourceRoot": "./src",
		"outDir": "./dist",
		"rootDir": "./src",
		"mapRoot": "./src",
		"removeComments": true,
		"strict": true,
		"noImplicitAny": false,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"noImplicitThis": true,
		"alwaysStrict": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true
	}
}